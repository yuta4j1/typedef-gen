{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "rootDir": ".",
        "outDir": "dist",
        "declaration": true,
        "lib": [
            "dom",
            "ES2020"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "target": "es2020",
    },
    "exclude": [
        "node_modules",
        "__tests__",
        "dist",
        "jest.*.js",
        "esbuild.*.js"
    ],
    "include": [
        "**/*",
    ]
}